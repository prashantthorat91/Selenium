<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.clc.util.Employee" table = "emp_info_sample">
      <id name = "empId" type = "int" column = "Emp_id">
         <generator class="native"/>
      </id>
      <property name = "empName" column = "emp_name" type = "string"/>
      <property name = "empAddress" column = "empAddress" type = "string"/>
      <property name = "empAge" column = "emp_Age" type = "int"/>
   </class>
</hibernate-mapping>