<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
   	  <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
	  <property name = "hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
	  <property name = "hibernate.connection.url">jdbc:mysql://localhost/selenium</property>
	  <property name = "hibernate.connection.username">root</property>
	  <property name = "hibernate.connection.password">root</property>
	  
	  <!-- optional properties -->
	  <property name="hibernate.hbm2ddl.auto">create-drop</property>
	  <property name="show_sql">true</property>
	  <property name="format_sql">true</property>
	  <property name="hibernate.current_session_context_class">thread</property>
	  
	  <!-- <mapping class="mapping.relationship.Product1"/> -->
	  
	  <!-- <mapping class="com.clc.inheritance.Emp1"/>
	  <mapping class="com.clc.inheritance.Address1"/> -->
	  
	  <!-- <mapping class="com.clc.inheritance.Emp"/>
	  <mapping class="com.clc.inheritance.CEmp"/>
	  <mapping class="com.clc.inheritance.PEmp"/> -->
	  
	  <!-- <mapping class="com.clc.util.Employee"/> -->
	  <!-- <mapping resource="employee.hbm.xml"/> -->
	  
	</session-factory>
</hibernate-configuration>